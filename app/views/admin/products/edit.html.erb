<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    Edit Product
  </h1>

  <div>
    <%= link_to 'Show Product', admin_product_path(@product) , class: "button" %>
  </div>
</header>

<%= form_with(model: @product, url: admin_product_path, local: true, required: true) do |f| %>

  <section class="main-content__body">

    <div class="field-unit field-unit--string field-unit--optional">
      <div class="field-unit__label">
      <%= f.label :Title %>
      </div>
      <div class="field-unit__field">
        <%= f.text_field :title, placeholder: "Title of product" %>
      </div>
    </div>

    <div class="field-unit field-unit--string field-unit--optional">
      <div class="field-unit__label">
        <%= f.label :Model %>
      </div> 
      <div class="field-unit__field">
        <%= f.text_field :model, placeholder: "Enter Model of Product" %>
      </div> 
    </div>

    <div class="field-unit field-unit--string field-unit--optional">
      <div class="field-unit__label">
        <%= f.label :Description%>
      </div>
      <div class="field-unit__field">
        <%= f.text_area :description, placeholder: "Enter Description of Product" %>
      </div>
    </div>
    
  
    <div class="field-unit field-unit--string field-unit--optional">
      <div class="field-unit__label">
        <%= f.label :Brand %>
      </div>
      <div class="field-unit__field">
        <%= f.text_field :brand, placeholder: "Enter Brand of Product" %>
      </div>
    </div>

    <div class="field-unit field-unit--string field-unit--optional">
    <div class="field-unit__label">
      <%= f.label :Price %>
    </div>
    <div class="field-unit__field">
      <%= f.number_field :price, placeholder: "Enter Price of Product" %>
    </div>
  </div>

    <div class="field-unit field-unit--string field-unit--optional">
      <div class="field-unit__label">
        <%= f.label :Finish %>
      </div>
      <div class="field-unit__field">
        <%= f.text_field :finish, placeholder: "Enter Colors of Product" %>
      </div>
    </div>

    <div class="field-unit field-unit--string field-unit--optional">
      <div class="field-unit__label">
      <%= f.label :Condition %>
      </div>
      <div class="field-unit__field">
        <%= f.text_field :condition, placeholder: "Enter Condition of Product" %>
      </div>
    </div>

      <div class="field-unit field-unit--string field-unit--optional">
        <div class="field-unit__label">
        <%= f.label :Quantity %>
        </div>
        <div class="field-unit__field">
        <%= f.number_field :quantity, placeholder: "Enter Quantity of Product" %>
        </div>
      </div>

      <div class="field-unit field-unit--string field-unit--optional">
        <div class="field-unit__label">
          <%= f.label :Category %>
        </div>
        <div class="field-unit__field">
         <%= f.collection_select(:category_ids, Category.all, :id, :name,
         { prompt: "Please select Category(can be empty)"}, { multiple: true}) %>
        </div>
      </div>
    
      <div class= "field-unit field-unit--string field-unit--optional">
        <div class="field-unit__label">
        <%= f.label :image %>
        </div>
        <div class="field-unit__field">
          <%= f.file_field :image %>
        </div>
      </div>


  </section>
  <div class="form-group row justify-content-md-center">
   <%= f.submit%>
  </div>
<% end %>

