<nav class="navbar navbar-expand-lg bg-light">
  <div class="container">
    <a class="navbar-brand" href="http://localhost:3000/">
      <%= image_tag("mykartlogo.png", class: "img-responsive", id: "navbar-logo") %>
    </a>
    
    <% if current_user %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item"></li>
        <li class="nav-item"></li>
        

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" role="button"  data-bs-toggle="dropdown" aria-expanded="false" > Category
            <%#= link_to "Category", categories_path, class: "nav-link" %>
          </a>
     
         <ul class="dropdown-menu navbar-dark bg-dark" aria-labelledby="navbarDropdown ">
           <div class="container">
             <% @w_categories.each do |category| %>
                 <li><%= link_to category.name, category_path(category), class: "link text-white"%></li>
              <% end %>
             </div>
          </ul>
        </li>
      </ul>
      
      <ul class='navbar-nav ml-auto'>
        <li class="nav-item set">
          <% if cart_has_items %>
            <%= link_to cart_path(@cart), class:"navbar-item btn btn-dark btn-sm" do %>
              <span class="icon is-small">
              <i class='fa fa-cart-plus mr-2'></i>
              </span>
              <span>Cart
                <%= cart_count_over_one %>
              </span> 
            <% end %>
          <% end %>
        </li>  
      </ul>  


      <ul class='navbar-nav ml-auto'>
        <li class='nav-item user-email'>
          <i class='fa fa-user'></i><%= current_user.email %><%= "(Admin)" if current_user.admin?%> 
        </li>
