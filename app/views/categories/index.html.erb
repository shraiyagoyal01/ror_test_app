<h1 class="text-center mt-4">Categories</h1>

<div class="container">
    
    <div class="row justify-content-md-center">
    
        <% @categories.each do |category| %>
            <div class="card text-white bg-dark mb-3" style="width: 12rem;" id="card-styl"   >
                <div class="card-body">
                    <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-white" %></h5>
                </div>
            </div>
        <% end %>  
     
     
    </div>

</div>
