
<% if @product.errors.any? %>
<div class="alert alert-danger alert-dismissible fade show"  role="alert">
  <h2>The Following errors prevented the product from being saved</h2>
    <ul>
        <% obj.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
        <% end %> 
    </ul>
</div>
<% end %>


